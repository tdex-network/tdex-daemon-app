{
  "name": "tdex-daemon-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:proto": "./scripts/get-proto-files && ./scripts/compile-proto-js",
    "build": "craco build",
    "bundle-analyzer": "open http://localhost:8888",
    "eslint": "eslint './src/**/*.{ts,tsx}'",
    "fmt": "yarn run eslint --fix && yarn run prettier --write",
    "lint": "yarn run eslint && yarn run prettier --check",
    "prettier": "prettier './src/**/*.{ts,tsx}'",
    "start": "PORT=3003 nodemon -w './src/assets/styles/antd.customize.less' --exec 'craco start'",
    "test": "craco test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@hookform/error-message": "^2.0.0",
    "@reduxjs/toolkit": "^1.6.2",
    "antd": "^4.16.13",
    "antd-css-utilities": "^1.0.1",
    "classnames": "^2.3.1",
    "craco-antd": "^1.19.0",
    "craco-less": "^1.20.0",
    "google-protobuf": "^3.18.1",
    "grpc-web": "1.3.0",
    "ldk": "^0.3.13",
    "qrcode.react": "^1.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.17.4",
    "react-redux": "^7.2.5",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "typescript": "~4.4.4"
  },
  "devDependencies": {
    "@craco/craco": "^6.3.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.3.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.0",
    "@types/qrcode.react": "^1.0.2",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.1.19",
    "@types/react-router-dom": "^5.3.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "grpc-tools": "^1.11.2",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "protoc-gen-grpc-web": "1.3.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpackbar": "^5.0.0-3"
  }
}
