{
  "name": "tdex-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:proto": "./scripts/get-proto-files && ./scripts/compile-proto-js",
    "build": "craco build",
    "bundle-analyzer": "open http://localhost:8888",
    "eslint": "eslint './src/**/*.{ts,tsx}'",
    "fmt": "yarn run eslint --fix && yarn run prettier --write",
    "lint": "yarn run eslint && yarn run prettier --check",
    "prettier": "prettier './src/**/*.{ts,tsx}'",
    "start": "PORT=3003 nodemon -w './src/assets/styles/antd.customize.less' --exec 'craco start'",
    "test": "craco test",
    "eject": "react-scripts eject",
    "tdexd:clean": "bash scripts/tdexd-clean.sh",
    "tdexd:run": "curl https://raw.githubusercontent.com/TDex-network/tdex-sdk/master/scripts/tdexd-run -o tdex-run && bash tdex-run && rm tdex-run",
    "tdexd:tdexdconnect": " docker exec -it tdexd tdexdconnect --out url"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.4.4",
    "@reduxjs/toolkit": "^1.6.2",
    "antd": "^4.16.13",
    "antd-css-utilities": "^1.0.1",
    "base64url": "^3.0.1",
    "classnames": "^2.3.1",
    "craco-antd": "^1.19.0",
    "decode-uri-component": "^0.2.0",
    "google-protobuf": "^3.19.1",
    "grpc-web": "1.3.0",
    "ldk": "^0.3.15",
    "qrcode.react": "^1.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.0.2",
    "react-scripts": "4.0.3",
    "redux-persist": "^6.0.0",
    "typescript": "~4.4.4",
    "untildify": "^4.0.0"
  },
  "devDependencies": {
    "@craco/craco": "^6.4.0",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/decode-uri-component": "^0.2.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "@types/qrcode.react": "^1.0.2",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/react-redux": "^7.1.20",
    "@types/react-router-dom": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.0",
    "grpc-tools": "^1.11.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "protoc-gen-grpc-web": "1.3.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpackbar": "^5.0.2"
  }
}
