{
  "name": "tdex-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:proto": "./scripts/get-proto-files && ./scripts/compile-proto-js",
    "build": "npx craco build",
    "bundle-analyzer": "open http://localhost:8888",
    "eslint": "eslint './src/**/*.{ts,tsx}'",
    "fmt": "yarn run eslint --fix && yarn run prettier --write",
    "lint": "yarn run eslint && yarn run prettier --check",
    "prettier": "prettier './src/**/*.{ts,tsx}'",
    "start": "PORT=3003 nodemon -w './src/assets/styles/antd.customize.less' --exec 'craco start'",
    "start:testnet": "REACT_APP_CHAIN=testnet PORT=3003 nodemon -w './src/assets/styles/antd.customize.less' --exec 'craco start'",
    "test": "craco test",
    "eject": "react-scripts eject",
    "tdexd:clean": "bash scripts/tdexd-clean",
    "tdexd:run": "bash scripts/tdexd-run",
    "tdexd:run-initialized": "bash scripts/tdexd-run-initialized",
    "tdexd:tdexdconnect": " docker exec -it tdexd tdexdconnect --out url",
    "tauri:build": "cargo tauri build",
    "tauri:dev": "cargo tauri dev"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.4.4",
    "@reduxjs/toolkit": "^1.6.2",
    "@tauri-apps/api": "^1.0.0-beta.8",
    "antd": "^4.17.2",
    "antd-css-utilities": "^1.0.2",
    "base64url": "^3.0.1",
    "big.js": "^6.1.1",
    "classnames": "^2.3.1",
    "craco-antd": "^1.19.0",
    "decode-uri-component": "^0.2.0",
    "google-protobuf": "^3.19.1",
    "grpc-tools": "^1.11.2",
    "grpc-web": "1.3.0",
    "ldk": "^0.4.0",
    "lodash.groupby": "^4.6.0",
    "protoc-gen-grpc-web": "^1.3.0",
    "qrcode.react": "^1.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.0.2",
    "react-scripts": "4.0.3",
    "redux-persist": "^6.0.0",
    "typescript": "~4.5.2",
    "untildify": "^4.0.0"
  },
  "devDependencies": {
    "@craco/craco": "^6.4.2",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/big.js": "^6.1.2",
    "@types/decode-uri-component": "^0.2.0",
    "@types/jest": "^27.0.3",
    "@types/lodash.groupby": "^4.6.6",
    "@types/node": "^16.11.11",
    "@types/qrcode.react": "^1.0.2",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-redux": "^7.1.20",
    "@types/react-router-dom": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpackbar": "^5.0.2"
  }
}
